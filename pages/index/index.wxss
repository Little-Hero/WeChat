page {
    color: #666;
    padding: 10rpx;
}


/* 顶部导航 */

.nav {
    white-space: nowrap;
    padding: 5rpx 0;
}

.nav_item {
    padding: 20rpx 45rpx;
    font-size: 30rpx;
    display: inline-block;
}

.nav_item.active {
    border-bottom: solid 5rpx #0094ff;
}


/* 轮播图 */

.slides swiper {
    height: 220rpx;
}

.swiper {
    width: 100%;
    height: 100%;
}

.swiper image {
    widows: 100%;
    height: 100%;
}


/* 视频列表 */

.video_wrap {
    display: flex;
    flex-flow: wrap;
    padding: 5rpx;
    justify-content: space-between;
}


/* 视频个体 */

.video_item {
    width: 48%;
    margin-bottom: 20rpx;
}


/* 视频图片 */

.video_img {
    position: relative;
}

.video_img_video image {
    width: 100%;
}


/* 视频信息 */

.video_img .video_info {
    position: absolute;
    bottom: 10rpx;
    left: 0;
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: white;
    font-size: 30rpx;
}


/* 播放样式 */

.video_count image {
    width: 26rpx;
    height: 26rpx;
}


/* .video_play {} */


/* 评论样式 */

.comment_count image {
    width: 26rpx;
    height: 26rpx;
}


/* 标题样式 */

.video_title {
    font-size: 30rpx;
    display: -webkit-box;
    overflow: hidden;
    white-space: normal;
    text-overflow: ellipsis;
    word-wrap: break-word;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}